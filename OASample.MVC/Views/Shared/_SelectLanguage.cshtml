@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@using Microsoft.AspNetCore.Builder;

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

@{
    var requestFeature = Context.Features.Get<IRequestCultureFeature>();
    var cultureItems = LocOptions.Value.SupportedCultures
        .Select(x => new SelectListItem()
        {
            Value = x.Name,
            Text = x.DisplayName
        });
}

<div>
    <form asp-action="SetLanguage" method="post" asp-controller="Home" 
          asp-route-returnUrl="@Context.Request.Path"
          class="form-horizontal">
        Language:
        <select name="culture" asp-for="@requestFeature.RequestCulture.UICulture.Name" asp-items="@cultureItems"></select>
        <button type="submit" class="btn btn-sm btn-primary">Save</button>
    </form>
</div>
